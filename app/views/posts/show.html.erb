

<div class="row-fluid">
	<div class="row-fluid">
			<div class="span10 offset1"><%= render :partial => @post %></div>
	</div>
</div>

<div class="row-fluid">
	<div class="span11 offset1">
		<div class="span4">
			<h4>Comments</h4>
		</div>
	</div>
</div>


<div id="comments">
	<%= render :partial => @post.comments %>

</div>

<div class="row-fluid">
	<div class="span10 offset1">
		<%= form_for [@post, Comment.new] do |f| %>
       		<div class="row-fluid">
       			<p>Name:</p>
       			<%= f.text_area :name, :rows => "1", :style => "width:120px" %>
       		</div>
       		<div class="row-fluid">
       			<%= f.text_area :body, :rows => "5", :style => "width:500px" %>
       		</div>
       		<div class="row-fluid">
       			<p><%= f.submit "Post comment", :class => "btn" %></p>
       		</div>
	</div>
</div>


<% end %>

<div class="row-fluid">
	<div class="span1 offset10">
		<%= link_to 'Edit Post', edit_post_path(@post), :confirm => 'Only Dan The Man can edit posts. Are you Dan The Man?'%>
	</div>
	<div class="span1">
		<%= link_to 'Delete Post', @post, :confirm => 'Only Dan The Man can delete posts. Are you Dan The Man?', :method => :delete %>
	</div>
</div>
