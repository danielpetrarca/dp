
<div class="row-fluid">
	<div class="span10 offset1">
		<div class="row-fluid">
			<div class="span8">
				<p><%= comment.name %> Says: <%= comment.body %></p>

			</div>
				<div class="span3">
					<p>Posted <%= time_ago_in_words(comment.created_at) %> ago.</p>
				</div>
				<div class="span1">
					<%= link_to 'Delete', [comment.post, comment], :confirm => 'Only Dan The Man can delete comments. Are you Dan The Man?', :method => :delete %>
				</div>
			</div>
		<br>
		<br>
	</div>
</div>